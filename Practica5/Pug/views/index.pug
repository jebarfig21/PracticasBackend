    .w-25.mx-auto.mt-5.bg-light
      form(style="mx-auto mt-5" action='/productos' method='POST')
        .form-group
          label(for='nombre') Nombre
          input#nombreInput.form-control(type='text' name='title' placeholder='Nombre producto')
        .form-group
          label(for='precio') Precio
          input#precioInput.form-control(type='number' name='price' placeholder='$$$')
        .form-group
          label(for='url') URL
          input#urlInput.form-control(type='text' name='thumbnail' placeholder='URL')
        button.btn.btn-primary(type='submit') Submit
