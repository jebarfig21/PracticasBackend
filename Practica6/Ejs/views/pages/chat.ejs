<!DOCTYPE html>
<html lang="">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Socket.io Chat Server</title>

        <%- include('../partials/head'); %>
    </head>
    <body>
      <div class="w-25 mx-auto mt-5 bg-light">

          <form action="../productos" method="POST">
            <div class="form-group">
              <label for="nombre">Nombre</label>
              <input type="text" class="form-control" id="nombreInput" name="title" placeholder="Nombre producto">
            </div>

            <div class="form-group">
              <label for="precio">Precio</label>
              <input type="number" class="form-control" id="precioInput"  name="price" placeholder="$$$">
            </div>

            <div class="form-group">
              <label for="url">URL</label>
              <input type="text" class="form-control" id="urlInput" name="thumbnail" placeholder="URL">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
       </div>
       <br>
       <div class="w-50 mx-auto mt-5">
       <table class="container table table-hover ">
       <thead>
         <tr>
           <th scope="col">#</th>
           <th scope="col">Titulo</th>
           <th scope="col">Precio</th>
           <th scope="col">Thumbnail</th>

         </tr>

       </thead>
         <tbody>
           <% products.forEach(function(product) { %>
           <tr>
             <th scope="row">product.id</th>
             <td><%= product.title %></td>
             <td><%= product.price %></td>
             <td>
               <img src= <%= product.thumbnail %> width="50"/>
             </td>
           </tr>
           <% }); %>

         </tbody>
       </table>

       </div>
       <br>
       <div class="container mx-auto">
        <form onsubmit="return addMessage(this)">
          <input type="text" id="username" placeholder="Nombre">
          <input type="text" id="message" placeholder="Cuentanos algo...">
          <input type="submit" value="Enviar"></input>
        </form>

        <div class="container-fluid">

            <ul class="list-group" id="messages"></ul>

        </div>

        <!-- jQuery -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
        <!-- Bootstrap JavaScript -->
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
        <script src="/socket.io/socket.io.js"></script>

        <%- include('../partials/mensajes'); %>
      </div>

    </body>
</html>
